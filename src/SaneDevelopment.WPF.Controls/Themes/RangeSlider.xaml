    <Style x:Key="{x:Type local:SimpleNumericRangeSlider}"
           TargetType="{x:Type local:SimpleNumericRangeSlider}">
        <Setter Property="Stylus.IsPressAndHoldEnabled"
                Value="false"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="Foreground"
                Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SimpleNumericRangeSlider}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Width="{TemplateBinding Width}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"
                                               MinHeight="{TemplateBinding local:SimpleNumericRangeSlider.MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <local:LabeledTickBar x:Name="TopTickLabels"
                                     Placement="Top"
                                     Fill="{TemplateBinding Foreground}"
                                     Ticks="{TemplateBinding local:SimpleNumericRangeSlider.Ticks}"
                                     TickFrequency="{TemplateBinding local:SimpleNumericRangeSlider.TickFrequency}"
                                     Minimum="{TemplateBinding local:SimpleNumericRangeSlider.Minimum}"
                                     Maximum="{TemplateBinding local:SimpleNumericRangeSlider.Maximum}"
                                     ReservedSpace="0"
                                     StartLabelSpace="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=StartReservedSpace}"
                                     EndLabelSpace="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=EndReservedSpace}"
                                     Height="11"
                                                  ValueNumericFormat="{TemplateBinding local:SimpleNumericRangeSlider.TickLabelNumericFormat}"
                                     ValueConverter="{TemplateBinding local:SimpleNumericRangeSlider.TickLabelConverter}"
                                     ValueConverterParameter="{TemplateBinding local:SimpleNumericRangeSlider.TickLabelConverterParameter}"
                                     Visibility="Collapsed">
                                <local:LabeledTickBar.Margin>
                                    <MultiBinding Converter="{StaticResource ThicknessConverter}">
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="StartReservedSpace" />
                                        <Binding Source="{StaticResource Zero}" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="EndReservedSpace" />
                                        <Binding Source="{StaticResource Zero}" />
                                    </MultiBinding>
                                </local:LabeledTickBar.Margin>
                            </local:LabeledTickBar>
                            <TickBar x:Name="TopTick"
                                     Grid.Row="1"
                                     Placement="Top"
                                     Fill="{TemplateBinding Foreground}"
                                     Ticks="{TemplateBinding local:SimpleNumericRangeSlider.Ticks}"
                                     TickFrequency="{TemplateBinding local:SimpleNumericRangeSlider.TickFrequency}"
                                     Minimum="{TemplateBinding local:SimpleNumericRangeSlider.Minimum}"
                                     Maximum="{TemplateBinding local:SimpleNumericRangeSlider.Maximum}"
                                     ReservedSpace="0"
                                     Height="4"
                                     Visibility="Collapsed">
                                <TickBar.Margin>
                                    <MultiBinding Converter="{StaticResource ThicknessConverter}">
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="StartReservedSpace" />
                                        <Binding Source="{StaticResource Zero}" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="EndReservedSpace" />
                                        <Binding Source="{StaticResource Zero}" />
                                    </MultiBinding>
                                </TickBar.Margin>
                            </TickBar>
                            <theme:ClassicBorderDecorator Name="PART_TrackBackground"
                                                          Height="4"
                                                          Grid.Row="2"
                                                          BorderStyle="Sunken"
                                                          BorderBrush="{x:Static theme:ClassicBorderDecorator.ClassicBorderBrush}"
                                                          BorderThickness="1"/>

                            <local:NumericRangeTrack Grid.Row="2"
                                   x:Name="PART_Track">
                                <local:NumericRangeTrack.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}"
                                                  Command="{x:Static local:SimpleNumericRangeSlider.DecreaseRangeLarge}"/>
