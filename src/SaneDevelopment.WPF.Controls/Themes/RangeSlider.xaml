                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="StartReservedSpace" />
                                                <Binding Source="{StaticResource Zero}" />
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="EndReservedSpace" />
                                            </MultiBinding>
                                        </TickBar.Margin>
                                    </TickBar>
                                    <theme:ClassicBorderDecorator Name="PART_TrackBackground"
                                                                  Margin="0,0,1,0"
                                                                  Width="4"
                                                                  Grid.Column="2"
                                                                  BorderStyle="Sunken"
                                                                  BorderBrush="{x:Static theme:ClassicBorderDecorator.ClassicBorderBrush}"
                                                                  BorderThickness="2"/>

                                    <local:DateTimeRangeTrack Grid.Column="2"
                                           x:Name="PART_Track">
                                        <local:DateTimeRangeTrack.DecreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}"
                                                          Command="{x:Static local:SimpleDateTimeRangeSlider.DecreaseRangeLarge}"/>
                                        </local:DateTimeRangeTrack.DecreaseRepeatButton>
                                        <local:DateTimeRangeTrack.IncreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource SliderRepeatButtonStyle}"
                                                          Command="{x:Static local:SimpleDateTimeRangeSlider.IncreaseRangeLarge}"/>
                                        </local:DateTimeRangeTrack.IncreaseRepeatButton>
                                        <local:DateTimeRangeTrack.StartThumb>
                                            <Thumb x:Name="StartThumb"
                                                   Style="{StaticResource VerticalSliderThumbStyle}"/>
                                        </local:DateTimeRangeTrack.StartThumb>
                                        <local:DateTimeRangeTrack.RangeThumb>
                                            <Thumb x:Name="RangeThumb"
                                                   Style="{StaticResource VerticalSliderRangeThumbStyle}"/>
                                        </local:DateTimeRangeTrack.RangeThumb>
                                        <local:DateTimeRangeTrack.EndThumb>
                                            <Thumb x:Name="EndThumb"
                                                   Style="{StaticResource VerticalSliderThumbStyle}"/>
                                        </local:DateTimeRangeTrack.EndThumb>
                                    </local:DateTimeRangeTrack>

                                    <TickBar x:Name="RightTick"
                                             Fill="{TemplateBinding Foreground}"
                                             Ticks="{TemplateBinding local:SimpleDateTimeRangeSlider.TicksAsDouble}"
                                             TickFrequency="{TemplateBinding local:SimpleDateTimeRangeSlider.TickFrequencyAsDouble}"
                                             Minimum="{TemplateBinding local:SimpleDateTimeRangeSlider.MinimumAsDouble}"
                                             Maximum="{TemplateBinding local:SimpleDateTimeRangeSlider.MaximumAsDouble}"
                                             ReservedSpace="0"
                                             Placement="Right"
                                             Width="4"
                                             Visibility="Collapsed"
                                             Grid.Column="3">
                                        <TickBar.Margin>
                                            <MultiBinding Converter="{StaticResource ThicknessConverter}">
                                                <Binding Source="{StaticResource Zero}" />
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="StartReservedSpace" />
                                                <Binding Source="{StaticResource Zero}" />
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="EndReservedSpace" />
                                            </MultiBinding>
                                        </TickBar.Margin>
                                    </TickBar>
                                    <local:LabeledTickBar x:Name="RightTickLabels"
                                             Fill="{TemplateBinding Foreground}"
                                             Ticks="{TemplateBinding local:SimpleDateTimeRangeSlider.TicksAsDouble}"
                                             TickFrequency="{TemplateBinding local:SimpleDateTimeRangeSlider.TickFrequencyAsDouble}"
                                             Minimum="{TemplateBinding local:SimpleDateTimeRangeSlider.MinimumAsDouble}"
                                             Maximum="{TemplateBinding local:SimpleDateTimeRangeSlider.MaximumAsDouble}"
                                             ReservedSpace="0"
                                             StartLabelSpace="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=StartReservedSpace}"
                                             EndLabelSpace="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=EndReservedSpace}"
                                             Placement="Right"
                                             Width="11"
                                             Visibility="Collapsed"
                                                          ValueNumericFormat="{TemplateBinding local:SimpleDateTimeRangeSlider.TickLabelNumericFormat}"
                                             ValueConverter="{TemplateBinding local:SimpleDateTimeRangeSlider.TickLabelConverter}"
                                             ValueConverterParameter="{TemplateBinding local:SimpleDateTimeRangeSlider.TickLabelConverterParameter}"
                                             Grid.Column="4">
                                        <local:LabeledTickBar.Margin>
                                            <MultiBinding Converter="{StaticResource ThicknessConverter}">
                                                <Binding Source="{StaticResource Zero}" />
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="StartReservedSpace" />
                                                <Binding Source="{StaticResource Zero}" />
                                                <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="EndReservedSpace" />
                                            </MultiBinding>
                                        </local:LabeledTickBar.Margin>
                                    </local:LabeledTickBar>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsDragRangeEnabled"
                                 Value="False">
                                    <Setter TargetName="RangeThumb"
                                            Property="IsEnabled"
                                            Value="False"/>
                                </Trigger>
                                <Trigger Property="TickPlacement"
                                         Value="TopLeft">
                                    <Setter TargetName="LeftTick"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="LeftTickLabels"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="StartThumb"
                                            Property="Style"
                                            Value="{StaticResource VerticalSliderLeftStartThumbStyle}"/>
                                    <Setter TargetName="EndThumb"
                                            Property="Style"
                                            Value="{StaticResource VerticalSliderLeftEndThumbStyle}"/>
                                    <Setter TargetName="PART_TrackBackground"
                                            Property="Margin"
                                            Value="3,0,0,0"/>
                                </Trigger>
                                <Trigger Property="TickPlacement"
                                         Value="BottomRight">
                                    <Setter TargetName="RightTick"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="RightTickLabels"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="StartThumb"
                                            Property="Style"
                                            Value="{StaticResource VerticalSliderRightStartThumbStyle}"/>
                                    <Setter TargetName="EndThumb"
                                            Property="Style"
                                            Value="{StaticResource VerticalSliderRightEndThumbStyle}"/>
                                    <Setter TargetName="PART_TrackBackground"
                                            Property="Margin"
                                            Value="0,0,3,0"/>
                                </Trigger>
                                <Trigger Property="TickPlacement"
                                         Value="Both">
                                    <Setter TargetName="LeftTick"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="LeftTickLabels"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="RightTick"
                                            Property="Visibility"
                                            Value="Visible"/>
                                    <Setter TargetName="RightTickLabels"
                                            Property="Visibility"
                                            Value="Visible"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>