            </Setter.Value>
        </Setter>
    </Style>

    
    <Style x:Key="BaseHorizontalSliderThumbStyle"
           TargetType="{x:Type Thumb}">
        <Setter Property="OverridesDefaultStyle"
                Value="true"/>
